<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>mini chats section</title>
    <style>
        .chat_block {
            background-color: aliceblue;
            margin: 10px;
            display: inline-block;
            border: 1px solid black;
            border-radius: 2px;
            padding: 5px;
        }

        .msg {
            background-color: blue;
            color: white;
        }
    </style>
</head>

<body>

    <h1>Chats:</h1>

    <form method="GET" action="/chats/new">
        <button>New Chat</button>
    </form>

    <div>
        <% for(let msg of all_messages){ %>

            <div class="chat_block">

                <p>From: <%=msg.from %>
                </p>

                <div class="msg">Message: <%=msg.msg %>

                        <form method="get" action="/chats/<%=msg._id%>/edit">
                            <button style="margin: 5px;">
                                Edit
                            </button>
                        </form>
                </div>

                <p>To:<%=msg.to %>
                </p>
                <hr>
                <p>
                    Date: <%= msg.time %>
                </p>

                <form method="Post" action="/chats/<%=msg._id%>/delete">
                    <button style="margin: 5px;">
                        Delete
                    </button>
                </form>
            </div>
            <br>
            <% } %>


    </div>


</body>

</html>